<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <%= f.label :commenter, 'Комментатор' %><br>
      <%= f.text_field :commenter %>
    </p>
    <p>
      <%= f.label :body, 'Комментарий' %><br>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.submit 'Создать комментарий' %>
    </p>
<% end %>